---
import Paragraph from '@components/ui/Paragraph.astro';
import Link from '@components/ui/Link.astro';
import Button from './Button.astro';


export interface Props {
  title: string;
  description: string;
  link: string; // Enlace principal del card (todo el card es clickable) 
  icon: string; 
  iconDescription: string;
  image: string;     
  secondUrl: string; 
  className?: string;
}

const { title, description, link, icon, iconDescription, image, secondUrl, className } = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer" class:list={["card", className]}>
  <div class="image-wrapper" aria-label={`Imagen del proyecto ${title}`} role="img" style={`background-image: url(${image});`}></div>

  <div class="content">
    <h3 class="title">{title}</h3>
    <Paragraph className="description">{description}</Paragraph>    
  </div>

  <div class="footer">      
      <a href={secondUrl}>
        <Button imageSrc={icon} text="" description={`Icono de enlace al ${iconDescription} de ${title}`}/>               
      </a>      
  </div>  
</a>

<style>
  .card {
    display: flex;
    flex-direction: column;
    background-color: #1e293b; /* bg-slate-800 */
    border-radius: px;
    overflow: hidden;
    box-shadow: 0 2px 4px rgb(0 0 0 / 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    color: white;
    text-decoration: none;
    cursor: pointer;
    height: 100%;
  }
  .card:hover {
    transform: scale(1.02);
    box-shadow: 0 12px 30px rgba(0, 200, 255, 0.3);
  }

  /* Imagen */
  .image-wrapper {
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    height: 180px;
    
  }
  .card:hover {
    transform: scale(1.03);
  }

  /* Contenido */
  .content {
    padding: 1rem 1.25rem 1rem 1.25rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  .title {
    font-size: 1.25rem; /* 20px */
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    color: #38bdf8; /* Tailwind blue-400 */
    text-shadow: 1px 1px 4px rgba(0,0,0,0.7);
  }
  .description {
    font-size: 1rem;
    color: #cbd5e1; /* Tailwind slate-300 */
    flex-grow: 1;
  }

  /* Footer */
  .footer {
  display: flex;
  justify-content: space-between;
  align-items: center; 
  padding: 0.75rem 1.25rem 1rem 1.25rem;  
}
</style>
