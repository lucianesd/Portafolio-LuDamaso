---
export interface Props{
    className?:string,
    imageSrc:string,
    description:string,    
}

const {className, imageSrc, description} = Astro.props

---

<button class={`inline-flex text-blue-500 border-2 border-blue-500 mx-2 py-2 px-4
                        focus:outline-none hover:bg-grey-800 hover:shadow-[0_0_20px_rgb(0,200,255,0.8)]
                        rounded-full text-md ${className}`}>
    <img src={imageSrc} alt={description} class="w-6 h-6"/>
</button>

<style>
    button{
        transition: all 0.3s ease;
    }
    button:hover{
        transform: scale(1.1);
    }
   </style> 