---
import Container from '@components/ui/Container.astro';
import Paragraph from '@components/ui/Paragraph.astro'; 
import Title from '@components/ui/Title.astro';
import Card from '@components/ui/Card.astro'; // Importa el nuevo componente
import { projects } from 'src/data/constants'; // Asegúrate de que la ruta sea correcta

---

<section class="relative overflow-hidden text-white ">
  <Container className="px-5 pt-16">
    <div class="text-center mb-12 md:mb-16">
      <Title className="text-blue-400 mb-4">
        Mis Últimos Proyectos
      </Title>
      <Paragraph className="text-lg text-gray-400 max-w-3xl mx-4 md:mx-auto">
        A seguir, algunos de mis trabajos más recientes.
      </Paragraph>
    </div>

    {/* Grid de Proyectos */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {projects.map((project) => (       
        <Card
          title={project.title}
          description={project.description}
          link={project.link}      
          text={project.text}
          icon={project.icon}
          iconDescription={project.iconDescription}
          image={project.image}
          repoUrl={project.repoUrl} 
          className='mx-1'
        />
      ))}
    </div>
  </Container>
</section>


